<nav class="bg-gray-800">
  <div class="mx-auto max-w-7xl px-2 sm:px-6 lg:px-8">
    <div class="relative flex h-16 items-center justify-between">
      <div class="absolute inset-y-0 left-0 flex items-center sm:hidden">

      </div>
      <div class="flex items-center justify-between w-full px-4 py-2 bg-gray-800">
        <div class="flex space-x-10">
          <%= button_to "Home", root_path, method: :get, class: "rounded-md px-3 py-2 text-l font-bold text-gray-300 hover:bg-gray-700 hover:text-white" %>
          <% if user_signed_in? %>
            <%= button_to "Add a blog", new_blog_post_path, method: :get, class: "rounded-md px-3 py-2 text-l font-bold text-gray-300 hover:bg-gray-700 hover:text-white" %>
            <%= button_to "My blogs", my_blogs_path, method: :get, class: "rounded-md px-3 py-2 text-l font-bold text-gray-300 hover:bg-gray-700 hover:text-white" %>
            <%= button_to "Profile", edit_user_registration_path, method: :get, class: "rounded-md px-3 py-2 text-l font-bold text-gray-300 hover:bg-gray-700 hover:text-white" %>
            <%= button_to "Logout", destroy_user_session_path, method: :delete, class: "rounded-md px-3 py-2 text-l font-bold text-gray-300 hover:bg-gray-700 hover:text-white" %>
          <% else %>
            <%= link_to "Sign Up", new_user_registration_path, class: "rounded-md px-3 py-2 text-l font-bold text-gray-300 hover:bg-gray-700 hover:text-white" %>
            <%= link_to "Login", new_user_session_path, class: "rounded-md px-3 py-2 text-l font-bold text-gray-300 hover:bg-gray-700 hover:text-white" %>
          <% end %>
        </div>
        <div class="flex ml-auto">
          <%= form_with url: root_path, method: :get, local: true, class: "flex" do |form| %>
            <%= form.label :search, "Search by title:", class: "sr-only px-2 py-2 text-l font-bold text-gray-300" %>
            <%= form.text_field :search, value: params[:search], placeholder: "Enter title", class: "rounded-md px-3 py-2" %>
            <%= form.submit "Search", class: "ml-2 rounded-md px-3 py-2 text-l font-bold text-gray-300 hover:bg-gray-700 hover:text-white" %>
          <% end %>
        </div>
      </div>      
      
      <div class="absolute inset-y-0 right-0 flex items-center pr-2 sm:static sm:inset-auto sm:ml-6 sm:pr-0">

        <!-- Profile dropdown -->

          <!--
            Dropdown menu, show/hide based on menu state.

            Entering: "transition ease-out duration-100"
              From: "transform opacity-0 scale-95"
              To: "transform opacity-100 scale-100"
            Leaving: "transition ease-in duration-75"
              From: "transform opacity-100 scale-100"
              To: "transform opacity-0 scale-95"
          -->
        </div>
      </div>
    </div>
  </div>

  <!-- Mobile menu, show/hide based on menu state. -->
</nav>
