<div class="flex justify-center ">
    <div class="max-w-3xl ">
        <h1 class="text-center mb-8">My Blogs</h1>

        <% if @blog_posts.any? %>
            <% @blog_posts.each do |blog_post| %>
            <div class="prose mb-8 bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
                <h2 class="text-left">
                    <%= link_to blog_post.title, blog_post %>
                </h2>
                <p><%= blog_post.body %></p>
            </div>
            <% end %>
        <% else %>
        <p>You have not created any blog posts yet.</p>
        <% end %>
    </div>
</div>