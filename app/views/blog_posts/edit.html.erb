<h1>Edit Blog Post</h1>

<%= form_with model: @blog_post do |form| %>
  <div>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
    <% @blog_post.errors.full_messages_for(:title).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :body %><br>
    <%= form.text_area :body %>
    <% @blog_post.errors.full_messages_for(:body).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.submit %>
  </div>

  <div>
    
  </div>
<% end %>

<%= button_to "Delete", @blog_post, method: :delete, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
